<%= form_for(player) do |f| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.select :gender, Player.genders.keys.map { |gender| [ gender, gender ] } %>
  </div>

  <div class="field">
    <%= f.label :x_pos %>
    <%= f.number_field :x_pos %>
  </div>

  <div class="field">
    <%= f.label :y_pos %>
    <%= f.number_field :y_pos %>
  </div>

  <div class="field">
    <%= f.label :background %>
    <%= f.text_field :background %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
