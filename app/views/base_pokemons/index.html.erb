<p id="notice"><%= notice %></p>

<h1>Base Pokemons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Health</th>
      <th>Power</th>
      <th>Element</th>
      <th>Background</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @base_pokemons.each do |base_pokemon| %>
      <tr>
        <td><%= base_pokemon.name %></td>
        <td><%= base_pokemon.health %></td>
        <td><%= base_pokemon.power %></td>
        <td><%= base_pokemon.element %></td>
        <td><%= base_pokemon.background %></td>
        <td><%= link_to 'Show', base_pokemon %></td>
        <td><%= link_to 'Edit', edit_base_pokemon_path(base_pokemon) %></td>
        <td><%= link_to 'Destroy', base_pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Base Pokemon', new_base_pokemon_path %>
