<p id="notice"><%= notice %></p>

<h1>Tiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Background</th>
      <th>Passable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tiles.each do |tile| %>
      <tr>
        <td><%= tile.name %></td>
        <td><%= tile.background %></td>
        <td><%= tile.passable %></td>
        <td><%= link_to 'Show', tile %></td>
        <td><%= link_to 'Edit', edit_tile_path(tile) %></td>
        <td><%= link_to 'Destroy', tile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tile', new_tile_path %>
