<p id="notice"><%= notice %></p>

<h1>Familiars</h1>

<table>
  <thead>
    <tr>
      <th>Nickname</th>
      <th>Player</th>
      <th>Base familiar</th>
      <th>Status</th>
      <th>Health</th>
      <th>Power</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @familiars.each do |familiar| %>
      <tr>
        <td><%= familiar.nickname %></td>
        <td><%= familiar.player.name %></td>
        <td><%= familiar.base_familiar.name %></td>
        <td><%= familiar.status %></td>
        <td><%= familiar.health %></td>
        <td><%= familiar.power %></td>
        <td><%= link_to 'Show', familiar %></td>
        <td><%= link_to 'Edit', edit_familiar_path(familiar) %></td>
        <td><%= link_to 'Destroy', familiar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

